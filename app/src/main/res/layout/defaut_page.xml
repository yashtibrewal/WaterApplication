<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_columnSpan="1"
    android:layout_rowSpan="1"
    android:background="@color/backgroundColor"
    android:padding="25dp">
    <TextView
        android:id="@+id/id_welcome"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:lines="2"
        android:textSize="50dp"
        android:text="Welcome!"
        />
    <ImageButton
        android:clickable="true"
        android:id="@+id/id_myinfo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_margin="30dp"
        android:layout_row="1"
        android:background="@color/backgroundColor"
        android:scaleType="centerCrop"
        android:src="@drawable/image_info" />

    <ImageButton
        android:clickable="true"
        android:id="@+id/id_waterConsumption"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="1"
        android:layout_margin="30dp"
        android:layout_row="1"
        android:background="@color/backgroundColor"
        android:scaleType="centerCrop"
        android:src="@drawable/image_water" />

    <ImageButton
        android:clickable="true"
        android:id="@+id/id_analysis"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_margin="30dp"
        android:layout_row="2"
        android:background="@color/backgroundColor"
        android:scaleType="centerCrop"
        android:src="@drawable/image_graph" />

    <ImageButton
        android:clickable="true"
        android:id="@+id/id_reminder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="1"
        android:layout_margin="30dp"
        android:layout_row="2"
        android:adjustViewBounds="true"
        android:background="@color/backgroundColor"
        android:scaleType="centerCrop"
        android:src="@drawable/image_clock" />


</GridLayout>
